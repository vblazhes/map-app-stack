<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:clickable="true"
                                                   android:contextClickable="true"
                                                   android:background="@android:color/white"
                                                   tools:context=".SavePinFragment" android:focusable="true">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:text="Name:"/>
        <EditText

                android:id="@+id/pinName_editText"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_height="50dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:text="Description:"/>

        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/pinDescription_editText"
                    android:maxLines="5"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:scrollbars="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/et_custom"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_height="50dp"/>
        </RelativeLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textSize="16sp"
                android:text="Image:"/>

        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <EditText
                    android:id="@+id/pinImage_editText"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:background="@drawable/et_custom"
                    android:layout_width="match_parent"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:layout_height="50dp"/>
        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button
                    android:id="@+id/savePin_fragBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/btn_custom_login"
                    android:textColor="@color/white"
                    android:text="SAVE PIN"/>

            <Button
                    android:id="@+id/uploadPin_fragBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/btn_custom_login"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="UPLOAD IMAGE"/>

        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>